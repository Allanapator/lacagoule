<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1542367235-d0f3b564d16e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2089&q=80);">
  <div class="container ">
    <h1><strong>Contracts</strong></h1>
    <p>You sign them, we break teeth for you</p>
    <div class="d-flex align-items-end flex-column bd-highlight mb-3">
      <div class="mt-auto p-2 bd-highlight">
      </div>
    </div>
  </div>
</div>
<div class="body-contrat">
  <table class="center">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Location</th>
        <th>Violence Required</th>

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @contracts.each do |contract| %>
        <tr>
          <td><%= contract.name.capitalize %></td>
          <td><%= contract.date %></td>
          <td><%= contract.location.capitalize %></td>
          <td class="lvl-violence">
            <% if (3 - contract.violence_required) != 0 %>
              <% contract.violence_required.times do %>
                <i class="fas fa-tint"></i>
              <% end %>
              <% (3 - contract.violence_required).times do %>
                <i class="fas fa-tint drop-vide"></i>
              <% end %>
            <% else %>
              <% 3.times do %>
                <i class="fas fa-tint"></i>
              <% end %>
            <% end %>
          </td>
          <td><%= link_to "Show", contract_path(contract), class:"btn btn-secondary my-2" %></td>
          <td>
            <%= link_to contract_path(contract), method: :delete,
              data: { confirm: "Are you sure?" } do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          </td>
        </tr>
      <% end %>


    </tbody>
  </table>
</div>

<br>

