<div class = "container">
  <div class ="row colonne">
    <% @hoods.each do |hood| %>
      <div class ="col-xs-12 col-md-6 col-lg-3">
        <div class ="d-flex justify-content-around">
          <div class ="card mt-3" id="card-hood">
            <img class="card-img-top" src="https://images.unsplash.com/photo-1572983423767-fa0ff3d2bf81?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=80" alt="Photo de chaque hoodman">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <h5 class="card-title"><%= hood.name %></h5>
                <p class="stars">
                  <% if (5 - hood.rating) != 0 %>
                    <% hood.rating.times do %>
                      <i class="fas fa-star"></i>
                    <% end %>
                    <% (5 - hood.rating).times do %>
                      <i class="far fa-star"></i>
                    <% end %>
                    <% else %>
                      <% 5.times do %>
                        <i class="fas fa-star"></i>
                      <% end %>
                  <% end %>
                </p>
              </div>
              <p class="card-text"><%= hood.description %></p>
              <%= link_to "See more", hood_path(hood), class:"btn btn-primary" %>
            </div>
            <div class="card-price" >
                <p><%= hood.price %>â‚¬</p>
            </div>
            <div class="lvl-violence">
              <i class="fas fa-tint"></i>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
